<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="LinkStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">10</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@drawable/text_color</item>
        <item name="android:background">@drawable/background_color</item>
        <item name="android:clickable">true</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="LinkStyleCent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">10</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@drawable/text_color_cent</item>
        <item name="android:background">@drawable/background_color</item>
        <item name="android:clickable">true</item>
        <item name="android:textStyle">italic</item>
    </style>
    
    <style name="RowStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

</resources>